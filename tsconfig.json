{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
//  "include": ["src/**/*","__tests__/**/*"],
  "exclude": ["__tests__", "dist", "node_modules"]
//  "exclude": [ "dist", "node_modules"]
}